<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StoryApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Color -->
        <item name="colorPrimary">@color/material_dynamic_primary80</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary20</item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary30</item>
        <item name="colorOnPrimaryContainer">@color/material_dynamic_primary90</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/material_dynamic_secondary80</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary20</item>
        <item name="colorSecondaryContainer">@color/material_dynamic_secondary30</item>
        <item name="colorOnSecondaryContainer">@color/material_dynamic_secondary90</item>

        <!-- Tertiary Color -->
        <item name="colorTertiary">@color/material_dynamic_tertiary80</item>
        <item name="colorOnTertiary">@color/material_dynamic_tertiary20</item>
        <item name="colorTertiaryContainer">@color/material_dynamic_tertiary30</item>
        <item name="colorOnTertiaryContainer">@color/material_dynamic_tertiary90</item>

        <!-- Customize your dark theme here. -->
        <item name="android:colorBackground">@color/material_dynamic_neutral_variant10</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
        <item name="android:textColor">@color/material_dynamic_neutral_variant99</item>
        <item name="colorControlNormal">?android:textColor</item>
    </style>

    <style name="toolbarBackground">
        <item name="android:background">@color/md_theme_dark_surfaceVariant</item>
    </style>

    <style name="materialCardViewBackground">
        <item name="cardBackgroundColor">@color/material_dynamic_neutral_variant10</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">?android:textColor</item>
    </style>
</resources>